<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <contextName>test</contextName>

    <!--输出到控制台 -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%cn %d{hh:MM:ss} [%20logger{0}] - %message%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref = "STDOUT"/>
    </root>

</configuration>
